<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="72dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:clickable="true"
            android:layout_height="112dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:layout_alignParentBottom="true"></View>

            <com.dq.itopic.views.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/avatar"
                android:layout_width="96dp"
                android:layout_marginLeft="12dp"
                android:layout_height="96dp"
                android:layout_alignParentBottom="true"
                app:civ_border_width="4dp"
                app:civ_border_color="#F8F8F8"
                android:src="@drawable/user_photo" />

            <LinearLayout
                android:layout_toRightOf="@+id/avatar"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="24dp"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/chat_ll"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/white_solid_gray_stroke_rect"
                        android:gravity="center"
                        android:clickable="true"
                        android:layout_height="32dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="聊天"
                            android:focusable="false"
                            android:clickable="false"
                            android:gravity="center"
                            android:drawablePadding="5dp"
                            android:background="@null"
                            android:drawableLeft="@drawable/profile_icon_chat_normal"
                            android:textColor="@color/black_white"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/edit_ll"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/white_solid_gray_stroke_rect"
                        android:gravity="center"
                        android:clickable="true"
                        android:layout_height="32dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="编辑资料"
                            android:focusable="false"
                            android:gravity="center"
                            android:drawablePadding="5dp"
                            android:background="@null"
                            android:drawableLeft="@drawable/profile_icon_edit_normal"
                            android:textColor="@color/black_white"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/header_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="14dp"
            android:text="加载中"
            android:background="@color/user_bg"
            android:textColor="@color/black_white"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/header_intro_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="加载中"
            android:paddingLeft="12dp"
            android:background="@color/user_bg"
            android:textColor="@color/text_gray_dark_color"
            android:lineSpacingExtra="4dp"
            android:textSize="14sp"/>


        <LinearLayout
            android:id="@+id/tags_ll"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@color/user_bg"
            android:paddingBottom="16dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/gender_tv"
                android:background="@drawable/gray_rect"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:textSize="14sp"
                android:textColor="@color/text_gray_dark_color"
                android:text="男"
                android:visibility="gone"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:gravity="center"
                android:drawablePadding="4dp"
                android:drawableLeft="@drawable/profile_icon_male_m_normal" />

            <TextView
                android:id="@+id/age_tv"
                android:background="@drawable/gray_rect"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:textSize="14sp"
                android:textColor="@color/text_gray_dark_color"
                android:text="10岁"
                android:visibility="gone"
                android:layout_marginLeft="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/city_tv"
                android:background="@drawable/gray_rect"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:textSize="14sp"
                android:textColor="@color/text_gray_dark_color"
                android:text="白羊座"
                android:visibility="gone"
                android:layout_marginLeft="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
