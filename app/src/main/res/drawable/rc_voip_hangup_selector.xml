<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@drawable/rc_voip_hang_up" android:state_focused="false"
        android:state_enabled="true"
        android:state_pressed="false" android:state_selected="false"/>

    <item android:drawable="@drawable/rc_voip_hang_up_hover" android:state_pressed="false"
        android:state_enabled="true"
        android:state_selected="true"/>

    <!-- Focused states -->
    <item android:drawable="@drawable/rc_voip_hang_up_hover" android:state_focused="true"
        android:state_enabled="true"
        android:state_pressed="false" android:state_selected="false"/>

    <!-- Pressed -->
    <item android:drawable="@drawable/rc_voip_hang_up_hover" android:state_pressed="true" android:state_enabled="true"/>

    <item android:drawable="@drawable/rc_voip_hang_up_hover" android:state_enabled="false"/>
</selector>